<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.steven.bierlijst">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AddBeerActivity"
            android:label="@string/add_beer_activity_label"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity
            android:name=".DetailsBeerActivity"
            android:label="@string/details_beer_activity_label"
            android:parentActivityName=".MainActivity">
        </activity>
        
        <provider
            android:authorities="com.example.steven.bierlijst"
            android:name="com.example.steven.bierlijst.data.BeerProvider"
            android:exported="false">
        </provider>

    </application>

</manifest>